
@{
    ViewData["Title"] = "FAQ";
    Layout = "~/Views/Frontend.cshtml";
}

<section class="blog_area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mb-5 mb-lg-0">
                <div class="blog_left_sidebar">

                    @foreach (var faq in Model)
                    {
                        <article class="blog_item">
                            <div class="blog_item_img">
                                <img class="card-img rounded-0" src="@Url.Content($"~/images/FAQ/{faq.Image}")" alt="@faq.Title" style="width: 100%; height: 300px; object-fit: cover; border-radius: 4px;">
                                <a href="#" class="blog_item_date">
                                    <h3>@faq.CreatedDate.ToString("dd")</h3>
                                    <p>@faq.CreatedDate.ToString("MMM")</p>
                                </a>
                            </div>

                            <div class="blog_details">
                                <a class="d-inline-block" href="@Url.Action("DetailFAQ", "Web", new { id = faq.Id })">
                                    <h2>@faq.Title</h2>
                                </a>
                                @{
                                    var cleanDescription = System.Text.RegularExpressions.Regex.Replace(
                                    faq.Description.Length > 100
                                    ? faq.Description.Substring(0, 100) + "..."
                                    : faq.Description,
                                    "<.*?>",
                                    string.Empty
                                    );
                                }
                                <p style="max-width: 100%; word-wrap: break-word; white-space: normal; overflow: hidden; text-overflow: ellipsis;">
                                    @Html.Raw(cleanDescription)
                                </p>
                            </div>
                        </article>
                    }
