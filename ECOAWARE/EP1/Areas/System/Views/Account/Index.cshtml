@model IEnumerable<EP1.ViewModels.AccountViewModel>
@{
    ViewData["Title"] = "Account";
    Layout = "~/Areas/System/Views/Backend.cshtml";
}
<h1>@ViewData["Title"]</h1>
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>IsActive</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Role.ToString()</td>
                <td>@(user.IsActive ? "True" : "False")</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = user.Email })" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Email" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this Blog?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
