    <script src="https://cdn.jsdelivr.net/npm/summernote/dist/summernote-lite.min.js"></script>
    
    <script>
        $(document).ready(function() {
            $('#Description').summernote({
                placeholder: 'Enter your text here...',
                tabsize: 2,
                height: 200
            });
        });
    </script>


    @RenderSection("Scripts", required: false)
    
</body>

</html>
