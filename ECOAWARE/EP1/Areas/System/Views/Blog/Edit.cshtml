@model EP1.ViewModels.BlogViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/System/Views/Backend.cshtml";
}

<div class="content">
    <div class="container">
        <div class="page-title">
            <h3>@ViewData["Title"]</h3>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">@ViewData["Title"]</div>
                    <div class="card-body">
                        <form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data" class="form-horizontal">
                            <div class="mb-3 row">
                                <label class="col-sm-2">Title</label>
                                <div class="col-sm-10">
                                    <input asp-for="Title" class="form-control" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="line"></div>
                            <br />
                            <div class="mb-3 row">
                                <label class="col-sm-2">Description</label>
                                <div class="col-sm-10">
                                    <textarea asp-for="Description" class="form-control"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="line"></div>
                            <br />
                            <div class="mb-3 row">
                                <label for="ImgFile" class="col-sm-2">Upload Image</label>
                                <div class="col-sm-10">
                                    <input asp-for="ImgFile" id="ImgFile" name="ImgFile" type="file" class="form-control" />
                                    @if (!string.IsNullOrEmpty(Model.Image))
                                    {
                                        <div class="mt-2">
                                            <label>Current Image:</label>
                                            <img src="/images/Blog/@Model.Image" alt="Current Image" style="max-width: 200px;" />
                                        </div>
                                    }
                                    else
                                    {
                                        <p>No image available.</p>
                                    }
                                    <input type="hidden" asp-for="Image" /> <!-- Trường ẩn lưu ảnh cũ -->
                                    <small class="form-text text-muted">Leave this field empty to keep the current image.</small>
                                </div>
                            </div>
                            <div class="line"></div>
                            <br />
                            <div class="mb-3 row">
                                <div class="col-sm-4 offset-sm-2">
                                    <a asp-action="Index" class="btn btn-secondary mb-2">
                                        <i class="fas fa-times"></i> Cancel
                                    </a>
                                    <button type="submit" class="btn btn-primary mb-2">
                                        <i class="fas fa-save"></i> Save
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

