@model IEnumerable<EP1.Models.Survey>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/System/Views/Backend.cshtml";
}

<div class="content">
    <div class="container">
        <div class="page-title">
            <h3>Survey List</h3>
        </div>
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        
                        <a href="@Url.Action("Create", "Survey")" class="btn btn-primary float-right">Add Survey</a>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover"
                               id="dataTables-example"
                               width="100%">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Title</th>
                                    <th>Image</th>
                                    <th>Status</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Actions</th>
                                    <th>Actions Test</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var survey in Model)
                                {
                                    <tr>
                                        <td>@survey.SurveyId</td>
                                        <td>@survey.Title</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(survey.Img))
                                            {
                                                <img src="/images/Survey/@survey.Img" alt="@survey.Title" style="width: 100px; height: auto;" />
                                            }
                                            else
                                            {
                                                <span>No Image</span>
                                            }
                                        </td>
                                        <td>@survey.Status</td>
                                        <td>@survey.StartDate.ToShortDateString()</td>
                                        <td>@survey.EndDate.ToShortDateString()</td>
                                        <td>
                                            @if (survey.Status == "Chưa bắt đầu")
                                            {
                                                <a href="@Url.Action("Index", "Question", new { surveyId = survey.SurveyId })" class="btn btn-info btn-sm">View Questions</a>
                                                <a href="@Url.Action("Edit", "Survey", new { id = survey.SurveyId })" class="btn btn-warning btn-sm">Edit</a>
                                                <a href="@Url.Action("Delete", "Survey", new { id = survey.SurveyId })" class="btn btn-danger btn-sm">Delete</a>
                                            }
                                            else
                                            {
                                                <span>Actions unavailable</span>
                                            }
                                        </td>
                                        <td>
                                            
                                                <a href="@Url.Action("Index", "Question", new { surveyId = survey.SurveyId })" class="btn btn-info btn-sm">View Questions</a>
                                                <a href="@Url.Action("Edit", "Survey", new { id = survey.SurveyId })" class="btn btn-warning btn-sm">Edit</a>
                                                <a href="@Url.Action("Delete", "Survey", new { id = survey.SurveyId })" class="btn btn-danger btn-sm">Delete</a>
                                           
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

